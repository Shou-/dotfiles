! Font config
Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting:    1
Xft.antialias:  1
Xft.dpi:        96
Xft.rgba:       rgb

! URxvt
! URxvt*font:         xft:Terminus:pixelsize=8:antialias=false,xft:monospace:pixelsize=8:antialias=true,xft:Tewi
! URxvt*boldFont:     xft:Terminus:pixelsize=8:antialias=false,xft:monospace:pixelsize=8:antialias=true,xft:Tewi
URxvt*font:         xft:Droid Sans Mono:pixelsize=11
URxvt*boldFont:     xft:Droid Sans Mono:pixelsize=11

*iconFile:          /usr/share/icons/gnome/scalable/apps/utilities-terminal-symbolic.svg
*termName:          rxvt-unicode
*scrollBar:         false
*matcher.button:    1
*transparent:       false
*allow_bold:        true
*urgentOnBell:      true
*buffered:          true
*inputMethod:       ibus
*preeditType:       OverTheSpot

URxvt.keysym.M-u:       perl:mark-yank-urls:activate_mark_mode
URxvt.underlineURLs:    true
URxvt.perl-lib:         /home/hatate/.urxvt/
URxvt.perl-ext:         selection,mark-yank-urls
URxvt.perl-ext-common:  default,matcher
URxvt.urlLauncher:      /usr/bin/x-www-browser

*keysym.M-Down:             \033[1;3B
*keysym.M-Up:               \033[1;3A
*keysym.M-Left:             \033[1;3D
*keysym.M-Right:            \033[1;3C
*keysym.Control-Up:         \033[1;5A
*keysym.Control-Down:       \033[1;5B
*keysym.Control-Left:       \033[1;5D
*keysym.Control-Right:      \033[1;5C
*keysym.Control-Page_Up:    \033[1;4A
*keysym.Control-Page_Down:  \033[1;52

! Emacs
emacs*Background:           #101010
emacs*Foreground:           #d0d0d0
emacs*pointerColor:         #d0d0d0
emacs*cursorColor:          #d0d0d0
emacs*bitmapIcon:           on
emacs*font:                 fixed

*eightBitInput:     False
*metaSendsEscape:   True
*modifier:          alt

*geometry:      80x24
*fading:        0
*tintColor:     #ffffff
*shading:       0
*inheritPixmap: False

